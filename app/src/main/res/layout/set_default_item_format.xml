<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="1dp"
    android:clickable="true"
    android:focusable="true"
    android:padding="2dp"
    app:cardCornerRadius="0dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:padding="12dp">

        <TextView
            android:id="@+id/username_textview_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textColor="@color/colorText"
            android:text="username"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/colon1_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/username_textview_new"
            android:padding="4dp"
            android:textColor="@color/colorText"
            android:text=":"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/username1_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/colon1_new"
            android:fontFamily="monospace"
            android:textColor="@color/colorText"
            android:padding="4dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/password_textview_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username_textview_new"
            android:padding="4dp"
            android:textColor="@color/colorText"
            android:text="password"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/colon2_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/username_textview_new"
            android:layout_toRightOf="@+id/password_textview_new"
            android:padding="4dp"
            android:textColor="@color/colorText"
            android:text=":"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/password1_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username_textview_new"
            android:layout_toRightOf="@+id/colon2_new"
            android:fontFamily="monospace"
            android:textColor="@color/colorText"
            android:padding="4dp"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radioButton2_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorText"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp" />

        />
    </RelativeLayout>
</android.support.v7.widget.CardView>