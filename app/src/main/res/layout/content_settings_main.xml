<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="net.deepeshmakhijani.bpgclogin.SettingsMain"
    tools:showIn="@layout/activity_settings_main">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card3"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="2dp"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            android:padding="16dp">

            <ImageView
                android:id="@+id/del"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"

                android:src="@drawable/ic_delete_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/del"
                android:paddingLeft="16dp"
                android:text="@string/delete_credentials"
                android:textColor="@color/colorText"
                android:textSize="20sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card1"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="2dp"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            android:padding="16dp">

            <ImageView
                android:id="@+id/vpn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_vpn_key_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/vpn"
                android:layout_toRightOf="@+id/vpn"
                android:paddingLeft="16dp"
                android:textColor="@color/colorText"
                android:paddingRight="16dp"
                android:text="Change Password"
                android:textSize="20sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="2dp"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            android:padding="16dp">

            <ImageView
                android:id="@+id/updt"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_update_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/updt"
                android:layout_toRightOf="@+id/updt"
                android:paddingLeft="16dp"
                android:textColor="@color/colorText"
                android:paddingRight="16dp"
                android:text="Set Default Credentials"
                android:textSize="20sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card2"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="2dp"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            android:padding="16dp">

            <CheckBox
                android:id="@+id/check_auto_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/check_auto_login"
                android:layout_toRightOf="@+id/check_auto_login"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/colorText"
                android:text="Enable Auto Login"
                android:textSize="20sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/d1"
        android:textColor="@color/colorText"
        android:layout_centerHorizontal="true"
        android:text="Developed By:" />

    <TextView
        android:id="@+id/d1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/d2"
        android:textColor="@color/colorText"
        android:layout_centerHorizontal="true"
        android:text="Deepesh Makhijani" />

    <TextView
        android:id="@+id/d2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorText"
        android:text="Shubham Kumar"
        android:layout_above="@+id/text_empty_message1"/>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/text_empty_message1"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/text_empty_message"
        android:textColor="@color/colorText"
        android:text="MOBILE APPLICATIONS CLUB"/>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/text_empty_message"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorText"
        android:layout_alignParentBottom="true"
        android:text="View Source Code"/>

</RelativeLayout>